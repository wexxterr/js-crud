<main class='main'>
  {{#with data}}
  <form method="POST" action="/purchase-submit" class="form-card">
    {{> heading title="Ваше замовлення"}}
    <div class="cart">

      <ul class="cart">
        {{#each cart}}
        <li class="cart__item">
          <span>{{text}}</span>
          <span>{{price}} ₴</span>
        </li>
        {{/each}}
      </ul>

      {{> divider}}

      {{> heading title="Оформлення замовлення"}}

      {{> field label="Ім'я" name="firstname"}}

      {{> field label="Прізвище" name="lastname"}}

      {{> field label="Телефон" name="phone"}}

      {{> field label="Пошта" name="email"}}

      {{> field label="Коментар" name="comment"}}

      {{> field label="Списати бонуси" name="bonus"}}

      {{> field label="Промо-код" name="promocode"}}

      {{> divider}}

      <strong class="form-card__total">
        Всього: {{totalPrice}} грн
      </strong>

      {{> button text="Оформити замовлення"}}
    </div>
  </form>
  {{/with}}
</main>
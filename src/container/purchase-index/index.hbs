<main class='main'>
  {{> heading}}
  <section class='purchase-list'>
    <div class='product-cards'>
      {{#each data.products}}


      <div class='product__card'>
        <img src='{{img}}' alt='{title}}' class='product-card__image' />
        <h2 class='product__card__title'>{{title}}</h2>
        <p class='product__card__description'>{{description}}</p>

        {{#each category}}
        <span class='product__card__category product__card__category--{{id}}'>{{text}}</span>
        {{/each}}
        <a href='/purchase-product?id={{id}}'>
          {{> button text='Купити зараз' price=price}}
        </a>
      </div>

      {{/each}}
    </div>
  </section>
</main>
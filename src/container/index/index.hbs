{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}
<main>
  <section>
    <div class="form">
      <h1 class="form__title">Створити користувача</h1>
      <form method="POST" action="/user-create">
        <div class="form__content">
          <div class="form__field">
            <label for="email" class="form__label">Email адреса:</label>
            <input class="form__input" name="email" type="email">
          </div>
          <div class="form__field">
            <label for="login" class="form__label">Назва користувача:</label>
            <input class="form__input" name="login" type="login">
          </div>
          <div class="form__field">
            <label for="password" class="form__label">Пароль:</label>
            <input class="form__input" name="password" type="password">
          </div>
          <button class="form__button">Створити</button>
        </div>
      </form>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Список користувачів</h1>
      <div class="user-list">
        {{#with data.users}}
        {{#if isEmpty}}
        <mark>Список користувачів пустий</mark>
        {{else}}
        <ul>
          {{#each list}}
          <li>{{email}} | {{login}} | {{id}} | <a href="/user-delete?id={{id}}">Видалити</a></li>
          {{/each}}
        </ul>
        {{/if}}
        {{/with}}
      </div>
    </div>
  </section>

  <section>
    <div class="form">
      <h1 class="form__title">Оновити пошту користувача</h1>
      <form method="POST" action="/user-update">
        <div class="form__content">
          <div class="form__field">
            <label for="id" class="form__label">ID:</label>
            <input class="form__input" name="id" type="id">
          </div>
          <div class="form__field">
            <label for="email" class="form__label">Нова email адреса:</label>
            <input class="form__input" name="email" type="email">
          </div>

          <div class="form__field">
            <label for="password" class="form__label">Пароль:</label>
            <input class="form__input" name="password" type="password">
          </div>
          <button class="form__button">Надіслати</button>
        </div>
      </form>
    </div>
  </section>
</main>

